<html>
  <head>
    <script type="text/javascript" src="../js/jquery.js"></script>
    <script type="text/javascript" src="../js/bootstrap.js"></script>

    <link href="../css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" type="text/css"/>
    <script src="https://code.jquery.com/ui/1.10.0/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.1/bootstrap-table.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.1/bootstrap-table.min.js"></script>
    <script>
      $(function () {
        $(".top-list").css('color', '#9d9d9d');
        $("#point_input_feedback").css('color', 'hotpink');

        <% if !@ch_cd.nil? && @ch_cd != "" && (@ch_cd == "CNP" || @ch_cd == "CLAB") %>
          $('select[id="select_channel"]').val('<%= @ch_cd %>');
        <% end %>

        <% if session[:admin_user] == "user" || (!session[:admin_user]['role'].nil? && session[:admin_user]['role'] == "admin") %>
          <% if !@shop_cd.nil? && @shop_cd != "" && %>
            document.getElementById("select_shop").value = '<%= @shop_cd %>'
          <% end %>
        <% end %>

        $("#datepicker").datepicker({
                    dateFormat: 'yy-mm-dd',
                    dayNamesMin: [
                        '일',
                        '월',
                        '화',
                        '수',
                        '목',
                        '금',
                        '토'
                    ],
                    monthNamesShort: [
                        '1월',
                        '2월',
                        '3월',
                        '4월',
                        '5월',
                        '6월',
                        '7월',
                        '8월',
                        '9월',
                        '10월',
                        '11월',
                        '12월'
                    ],
                    currentText: '오늘 날짜',
                    changeMonth: true
                });
          $("#datepicker").datepicker('setDate', '<%= @date %>');
          $('#datepicker').change(function () {
            <% if session[:admin_user] == "user" || (!session[:admin_user]['role'].nil? && session[:admin_user]['role'] == "admin") %>
            <% else %>
              location.href = "/admin/input_cnp?date=" + $('#datepicker').val()
            <% end %>
          });

          $('#submit').click(function(){
            var ch_cd = document.getElementById("select_channel").options[document.getElementById("select_channel").selectedIndex].value;

            url = "/admin/input_cnp?date=" + $('#datepicker').val();
            url += "&select_channel=" +ch_cd
            url += "&select_shop=" +$("#select_shop").val();
            location.href = url;
          });
      });

      function show_after_interview(after_interview_id, tablet_interview_id, custserial){
        window.open("/admin/after_interview?custserial=" + custserial + "&after_interview_id=" + after_interview_id + "&tablet_interview_id=" + tablet_interview_id, "/after_interview?custserial=" + custserial + "&after_interview_id=" + after_interview_id + "&tablet_interview_id=" + tablet_interview_id, "scrollbars=1,resizable=1,height=800,width=700");
      }

      function show_after_interview_1(after_interview_id, tablet_interview_id, custserial){
        window.open("/admin/after_interview_1?custserial=" + custserial + "&after_interview_id=" + after_interview_id + "&tablet_interview_id=" + tablet_interview_id, "/after_interview?custserial=" + custserial + "&after_interview_id=" + after_interview_id + "&tablet_interview_id=" + tablet_interview_id, "scrollbars=1,resizable=1,height=800,width=700");
      }

    </script>
    <style>
    .fixed-table-body {
      max-height: 170px;
    }

    .text-center {
        margin: 0 auto;
        text-align: center !important;
    }

    .th-inner {
      width: 160px;
      margin: 0 auto;
      text-align: center !important;
    }

    td {
      width: auto;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    </style>
  </head>

  <body>
    <%= render "admin/header" %>
    <% if session[:admin_user] == "user" || (!session[:admin_user]['role'].nil? && session[:admin_user]['role'] == "admin") %>
      <div style="background: #b1cbbb; padding: 8px;">
        <input class="form-control" type="text" id="datepicker" style="float:left; width: 200px;">
          <p style="float:left; margin-left: 20px; margin-top: 5px;">채널 :</p>
          <select class="form-control" id="select_channel" style="float:left; margin-left: 5px; width:200px;">
            <option value="ALL">전체</option>
            <option value="CNP">CNP</option>
            <option value="CLAB">CNP TEST</option>
          </select>
          <p style="float:left; margin-left: 20px; margin-top: 7px;">매장 코드 &nbsp;</p>
        <input class="form-control" type="text" name="select_shop" id="select_shop" style="float:left; width: 200px;">
        <button style="margin-left: 10px;" class="btn btn-warning" id="submit">조회</button>
      </div>
    <% else %>
      <input type="text" id="datepicker" style="width:100%; margin-top:10px;">
    <% end %>
    <div>
      <h4 style="background: #b1cbbb; padding: 8px; margin-top:1px;">당일 (<%= @date_today %>) <p style="float:right;">총 인원 수 : <%= @tablet_interviews_today.count %> 명</p></h4>
      <div>
          <table data-toggle="table" style="width:1200px;">
            <thead style="width: 100%;">
              <tr>
                  <th>이름</th>
                  <th>시리얼</th>
                  <th>진단 날짜</th>
                  <th>전화번호</th>
                  <th>사후 피드백 서비스</th>
                  <th>1차 설문 여부</th>
                  <th>2차 설문 여부</th>
                  <th>3차 설문 여부</th>
              </tr>
            </thead>
            <tbody>
              <% @tablet_interviews_today.each do |tabletinterview| %>
                <%= render partial: "admin/feedback/item", locals: { tabletinterview: tabletinterview } %>
              <% end %>
            </tbody>
          </table>
      </div>

      <h4 style="background: #b1cbbb; padding: 8px;">2주 후 (<%= @date_2weeks_ago %>) <p style="float:right;">총 인원 수 : <%= @tablet_interviews_2_weeks_ago.count %> 명</p></h4>
      <div>
        <table data-toggle="table" style="width:1200px;">
          <thead style="width: 100%;">
            <tr>
                <th>이름</th>
                <th>시리얼</th>
                <th>진단 날짜</th>
                <th>전화번호</th>
                <th>사후 피드백 서비스</th>
                <th>1차 설문 여부</th>
                <th>2차 설문 여부</th>
                <th>3차 설문 여부</th>
            </tr>
          </thead>
          <tbody>
            <% @tablet_interviews_2_weeks_ago.each do |tabletinterview| %>
              <%= render partial: "admin/feedback/item", locals: { tabletinterview: tabletinterview } %>
            <% end %>
          </tbody>
        </table>
      </div>

      <h4 style="background: #b1cbbb; padding: 8px;">3개월 후 (<%= @date_3months_ago %>) <p style="float:right;">총 인원 수 : <%= @tablet_interviews_3_months_ago.count %> 명</p></h4>
      <div>
        <table data-toggle="table" style="width:1200px;">
          <thead style="width: 100%;">
            <tr>
                <th>이름</th>
                <th>시리얼</th>
                <th>진단 날짜</th>
                <th>전화번호</th>
                <th>사후 피드백 서비스</th>
                <th>1차 설문 여부</th>
                <th>2차 설문 여부</th>
                <th>3차 설문 여부</th>
            </tr>
          </thead>
          <tbody>
            <% @tablet_interviews_3_months_ago.each do |tabletinterview| %>
              <%= render partial: "admin/feedback/item", locals: { tabletinterview: tabletinterview } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
